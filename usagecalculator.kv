#:kivy 2.1.0

<Interface>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1              # Black
        Rectangle:
            pos: self.pos
            size: self.size
    month_input: month_input
    day_input: day_input
    year_input: year_input

    MonthScreen:
        name: 'month'
        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            padding: 10
            Label:
                text: 'Enter Birth Month:'
                italic: True
            MonthInput:
                id: month_input
            GridLayout:
                NumericButton:
                    text: '1'
                    on_release: app.root.month_input.insert_text('1')
                NumericButton:
                    text: '2'
                    on_release: app.root.month_input.insert_text('2')
                NumericButton:
                    text: '3'
                    on_release: app.root.month_input.insert_text('3')
                NumericButton:
                    text: '4'
                    on_release: app.root.month_input.insert_text('4')
                NumericButton:
                    text: '5'
                    on_release: app.root.month_input.insert_text('5')
                NumericButton:
                    text: '6'
                    on_release: app.root.month_input.insert_text('6')
                NumericButton:
                    text: '7'
                    on_release: app.root.month_input.insert_text('7')
                NumericButton:
                    text: '8'
                    on_release: app.root.month_input.insert_text('8')
                NumericButton:
                    text: '9'
                    on_release: app.root.month_input.insert_text('9')
                Button:
                    text: ''
                NumericButton:
                    text: '0'
                    on_release: app.root.month_input.insert_text('0')
                Button:
                    text: 'Enter'
                    on_release: if (month_input.text != ''): app.root.current = 'day'
                

    DayScreen:
        name: 'day'
        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            padding: 10
            Label:
                text: 'Enter Birth Day:'
                italic: True
            DayInput:
                id: day_input
            GridLayout:
                NumericButton:
                    text: '1'
                    on_release: app.root.day_input.insert_text('1')
                NumericButton:
                    text: '2'
                    on_release: app.root.day_input.insert_text('2')
                NumericButton:
                    text: '3'
                    on_release: app.root.day_input.insert_text('3')
                NumericButton:
                    text: '4'
                    on_release: app.root.day_input.insert_text('4')
                NumericButton:
                    text: '5'
                    on_release: app.root.day_input.insert_text('5')
                NumericButton:
                    text: '6'
                    on_release: app.root.day_input.insert_text('6')
                NumericButton:
                    text: '7'
                    on_release: app.root.day_input.insert_text('7')
                NumericButton:
                    text: '8'
                    on_release: app.root.day_input.insert_text('8')
                NumericButton:
                    text: '9'
                    on_release: app.root.day_input.insert_text('9')
                Button:
                    text: 'Back'
                    on_release: app.root.current = 'month'
                NumericButton:
                    text: '0'
                    on_release: app.root.day_input.insert_text('0')
                Button:
                    text: 'Enter'
                    on_release: if (day_input.text != ''): app.root.current = 'year'

    YearScreen:
        name: 'year'
        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            padding: 10
            Label:
                text: 'Enter Birth Year:'
                italic: True
            YearInput:
                id: year_input
                hint_text: 'YYYY'
                hint_text_color:  .14, .10, .06, .3
            GridLayout:
                NumericButton:
                    text: '1'
                    on_release: app.root.year_input.insert_text('1')
                NumericButton:
                    text: '2'
                    on_release: app.root.year_input.insert_text('2')
                NumericButton:
                    text: '3'
                    on_release: app.root.year_input.insert_text('3')
                NumericButton:
                    text: '4'
                    on_release: app.root.year_input.insert_text('4')
                NumericButton:
                    text: '5'
                    on_release: app.root.year_input.insert_text('5')
                NumericButton:
                    text: '6'
                    on_release: app.root.year_input.insert_text('6')
                NumericButton:
                    text: '7'
                    on_release: app.root.year_input.insert_text('7')
                NumericButton:
                    text: '8'
                    on_release: app.root.year_input.insert_text('8')
                NumericButton:
                    text: '9'
                    on_release: app.root.year_input.insert_text('9')
                Button:
                    text: 'Back'
                    on_release: app.root.current = 'day'
                NumericButton:
                    text: '0'
                    on_release: app.root.year_input.insert_text('0')
                Button:
                    id: submit_button
                    text: 'Enter'
                    on_release: if (year_input.text != ''): app.root.current = 'results'
                    on_release: if (year_input.text != ''): results_text.text = app.root.calculate_age()
                
    ResultScreen:
        name: 'results'
        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            padding: 10
            Label:
                id: results_label
                text: "Current age is: "
                italic: True
            Label:
                id: results_text
                text: "results will go here"
                text_size: self.size
                padding: (10, 10)      
            BoxLayout:
                orientation: 'horizontal'
                spacing: 10
                Button:
                    text: 'Back'
                    padding: (10, 10)
                    on_release: app.root.current = 'year'
                    size_hint: .5, 1
                Button:
                    text: 'Start Over'
                    padding: (10, 10)
                    on_release: app.root.current = 'month'
                    on_release: app.root.month_input.text = ''
                    on_release: app.root.day_input.text = ''
                    on_release: app.root.year_input.text = ''
                    size_hint: .5, 1

<Label>:
    font_name: 'DMSerif'
    font_size: 75
    halign: 'center'
    valign: 'center'
    color: .78, .98, .92, 1          # Hex value: C9FAE7
    canvas.before:
        Color: 
            rgb: .14, .10, .06, 1
        Rectangle:
            pos: self.pos
            size: self.size

<TextInput>:
    padding_y: [self.height / 2.0 - (self.line_height / 2.0), 0]
    on_focus: self.focus = False
    input_filter: 'int'
    multiline: False
    background_color: .41, .56, .44, 1        # Hex Value: 6B8F71
    text_color: .14, .10, .06, 1              # Hex value: 251A10
    halign: 'center'
    font_name: 'DMSerif'
    font_size: 150

<GridLayout>:
    cols: 3
    rows: 4
    padding: 5
    spacing: 5

<Button>:
    font_name: 'DMSerif'
    font_size: 75
    background_normal: ''
    background_color: .14, .10, .06, 1
    color: .78, .98, .92, 1          # Hex value: C9FAE7